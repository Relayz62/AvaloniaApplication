<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaApplication.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AvaloniaApplication.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="AvaloniaApplication.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Application"
		Height="600"
		Width="800"
		MinHeight="600"
		MinWidth="800"
		WindowStartupLocation="CenterScreen"
        ExtendClientAreaToDecorationsHint="True">

	<Grid RowDefinitions="30,*">
		<!-- Заголовок -->
		<Grid ColumnDefinitions="Auto,*" IsHitTestVisible="False" Background="#121212">
			<Image Source="avares://AvaloniaApplication/Assets/avalonia-logo.ico" Grid.Column="0" VerticalAlignment="Center"  Width="18" Margin="12,0,12,0" ></Image>
			<TextBlock  Grid.Column="1" VerticalAlignment="Center" FontSize="12">Exploring Avalonia</TextBlock>
		</Grid>

		<!-- Основной контент -->
		<views:MainView Grid.Row="1"/>
	</Grid>
</Window>
