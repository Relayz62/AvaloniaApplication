<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AvaloniaApplication.ViewModels"
			 xmlns:m="using:AvaloniaApplication.Models"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
             x:Class="AvaloniaApplication.Views.MainView"
             x:DataType="vm:MainViewModel">
	
	<SplitView Name="SideBar"
			   IsPaneOpen="{Binding IsPaneOpen}"
			   CompactPaneLength="55"
			   OpenPaneLength="200"
			   DisplayMode="CompactInline">
		<!--Боковое меню-->
		<SplitView.Pane>
			<Grid Margin="5">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"></RowDefinition>
					<RowDefinition Height="7*"></RowDefinition>
					<RowDefinition Height="*"></RowDefinition>
				</Grid.RowDefinitions>
				<StackPanel Spacing="15"
				            Grid.Row="0">
				<Button Command="{Binding OpenPaneCommand}"
						Margin="5">
					<PathIcon Data="{StaticResource ThreeHorizontalLines}"/>
				</Button>
				
				<ListBox ItemsSource="{Binding SideMenuItems}"
						 SelectedItem="{Binding SelectedSideMenuItem}">
					<ListBox.ItemTemplate>
						<DataTemplate DataType="{x:Type m:SideMenuItem}">
							<StackPanel Spacing="15"
										Orientation="Horizontal">
								<PathIcon Data="{Binding Icon}"/>
								<TextBlock Text="{Binding Title}"/>
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
				</StackPanel>
				<Button Margin="5"
				        Grid.Row="2"
				        Command="{Binding ChangeThemeCommand}">
					<PathIcon Data="{StaticResource Theme}"/>
				</Button>
			</Grid>
		</SplitView.Pane>
		<!--Контент-->
		<SplitView.Content>
			<Border CornerRadius="3">
				<TransitioningContentControl Content="{Binding CurrentView}"/>
			</Border>
		</SplitView.Content>
	</SplitView>
	
</UserControl>
